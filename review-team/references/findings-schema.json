{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "review-team-findings-schema-v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "reviewer_id",
    "persona",
    "scope_slice",
    "findings",
    "residual_risks",
    "testing_gaps"
  ],
  "properties": {
    "reviewer_id": {
      "type": "string",
      "minLength": 1
    },
    "persona": {
      "type": "string",
      "minLength": 1
    },
    "scope_slice": {
      "type": "string",
      "minLength": 1
    },
    "coverage": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "paths_reviewed": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "title",
          "severity",
          "domain",
          "file",
          "line",
          "why_it_matters",
          "suggested_fix",
          "confidence",
          "evidence"
        ],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "severity": {
            "type": "string",
            "enum": ["P0", "P1", "P2", "P3"]
          },
          "domain": {
            "type": "string",
            "enum": [
              "security",
              "performance",
              "api",
              "testing",
              "maintainability",
              "frontend",
              "infra",
              "data",
              "reliability",
              "correctness",
              "dependency",
              "observability"
            ]
          },
          "file": {
            "type": "string",
            "minLength": 1
          },
          "line": {
            "type": "integer",
            "minimum": 1
          },
          "why_it_matters": {
            "type": "string",
            "minLength": 1
          },
          "suggested_fix": {
            "type": "string",
            "minLength": 1
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "evidence": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "risk_tags": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "residual_risks": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "testing_gaps": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
